# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=False

# Server Configuration
PORT=8000

# Weather API Configuration (wttr.in is used, no API key required)
WEATHER_API_TIMEOUT=10

# Application Limits
MAX_BATCH_SIZE=50
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_LEVEL=INFO

# Database (for future use if migrating from Excel)
# DATABASE_URL=sqlite:///probiotic.db

# Deployment Notes:
# 1. Copy this file to .env
# 2. Generate a strong SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
